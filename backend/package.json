{
  "name": "fitness-app-backend",
  "version": "1.0.0",
  "description": "A comprehensive fitness tracking API",
  "main": "index.js",
  "module": "index.js",
  "type": "module",
  "scripts": {
    "start": "bun run index.js",
    "dev": "bun --watch index.js",
    "test": "bun test",
    "test:models": "bun run models/test-migration.js",
    "test:models:db": "bun run models/test-migration.js --with-db",
    "lint": "eslint .",
    "format": "prettier --write .",
    "build": "bun build index.js --outdir ./dist --target bun",
    "clean": "rm -rf dist node_modules",
    "install:clean": "bun run clean && bun install"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "express": "^5.1.0",
    "mongoose": "^8.18.0",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1"
  },
  "trustedDependencies": [
    "bcryptjs",
    "mongoose"
  ],
  "bun": {
    "preload": ["./preload.js"]
  }
}
